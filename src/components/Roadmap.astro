---
import { getTranslations } from '../i18n/translations';
import { config } from '../config';

interface Props {
  lang?: 'en' | 'de';
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang).roadmap;
const isAvailable = config.isProductAvailable;
---

<section id="roadmap" class="py-24 relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-[#F05D23]/5 to-[#6b4c9a]/5 rounded-full blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {t.title} <span class="text-gradient-primary">{t.titleHighlight}</span>
        </h2>
        <p class="text-[#a0a5b5] text-lg">
          {t.subtitle}
        </p>
      </div>
      
      <!-- Devices Image -->
      <div class="mb-16">
        <img 
          src="/assets/marketing/Devies_withbackground.jpeg" 
          alt="Endure on multiple devices" 
          class="lg:w-5/6 w-full mx-auto rounded-2xl shadow-2xl border border-white/5"
        />
      </div>

      <!-- Platform Status Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <!-- Windows -->
        {isAvailable ? (
          <div class="card-surface p-6 text-center border-green-500/30 bg-green-500/5">
            <div class="text-4xl mb-3">âœ…</div>
            <h3 class="font-bold text-lg mb-1">{t.windows}</h3>
            <span class="inline-block px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-medium">
              {t.windowsStatus}
            </span>
          </div>
        ) : (
          <div class="card-surface p-6 text-center">
            <div class="text-4xl mb-3">ðŸš§</div>
            <h3 class="font-bold text-lg mb-1">{t.windows}</h3>
            <span class="inline-block px-3 py-1 bg-yellow-500/20 text-yellow-400 rounded-full text-sm font-medium">
              {t.macosStatus}
            </span>
          </div>
        )}
        
        <!-- macOS -->
        <div class="card-surface p-6 text-center">
          <div class="text-4xl mb-3">ðŸš§</div>
          <h3 class="font-bold text-lg mb-1">{t.macos}</h3>
          <span class="inline-block px-3 py-1 bg-yellow-500/20 text-yellow-400 rounded-full text-sm font-medium">
            {t.macosStatus}
          </span>
        </div>
        
        <!-- Android -->
        <div class="card-surface p-6 text-center">
          <div class="text-4xl mb-3">ðŸš§</div>
          <h3 class="font-bold text-lg mb-1">{t.android}</h3>
          <span class="inline-block px-3 py-1 bg-yellow-500/20 text-yellow-400 rounded-full text-sm font-medium">
            {t.androidStatus}
          </span>
        </div>
        
        <!-- iOS -->
        <div class="card-surface p-6 text-center">
          <div class="text-4xl mb-3">ðŸ“…</div>
          <h3 class="font-bold text-lg mb-1">{t.ios}</h3>
          <span class="inline-block px-3 py-1 bg-blue-500/20 text-blue-400 rounded-full text-sm font-medium">
            {t.iosStatus}
          </span>
        </div>
      </div>
      
      <!-- Community Section -->
      <div class="card-surface p-8 md:p-12 text-center">
        <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-gradient-to-br from-[#d63c6b] to-[#6b4c9a] flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-4">{t.communityTitle}</h3>
        <p class="text-[#a0a5b5] text-lg max-w-2xl mx-auto mb-6">
          {t.communityText}
        </p>
        <a href="https://github.com/cmaart/endure-website" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-[#F05D23] hover:text-[#ff6d33] font-medium transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          {t.communityLink}
        </a>
      </div>
    </div>
  </div>
</section>
