---
import { getTranslations } from '../i18n/translations';
import FeatureCard from './FeatureCard.astro';

interface Props {
  lang?: 'en' | 'de';
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang).features;
---

<section id="features" class="py-24 relative">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {t.sectionTitle} <span class="gradient-text">{t.sectionTitleHighlight}</span>
      </h2>
      <p class="text-[#a0a5b5] text-lg max-w-2xl mx-auto">
        {t.sectionSubtitle}
      </p>
    </div>
    
    <!-- Feature Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Fast & Rock-Solid -->
      <FeatureCard 
        title={t.performance.title}
        iconColor="green"
        features={[
          t.performance.feature1,
          t.performance.feature2,
          t.performance.feature3
        ]}
      >
        <svg slot="icon" class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </FeatureCard>
      
      <!-- Deep Progress Analytics -->
      <FeatureCard 
        title={t.analytics.title}
        iconColor="pink"
        features={[
          t.analytics.feature1,
          t.analytics.feature2,
          t.analytics.feature3
        ]}
      >
        <svg slot="icon" class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
        </svg>
      </FeatureCard>
      
      <!-- Structured Training -->
      <FeatureCard 
        title={t.training.title}
        iconColor="orange"
        features={[
          t.training.feature1,
          t.training.feature2,
          t.training.feature3
        ]}
      >
        <svg slot="icon" class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
        </svg>
      </FeatureCard>
      
      <!-- Connectivity & Sync -->
      <FeatureCard 
        title={t.connectivity.title}
        iconColor="blue"
        features={[
          t.connectivity.feature1,
          t.connectivity.feature2
        ]}
      >
        <svg slot="icon" class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.143 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" />
        </svg>
      </FeatureCard>
    </div>
    
    <!-- Screenshot showcase -->
    <div class="mt-20 grid md:grid-cols-2 gap-8">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-r from-[#d63c6b]/20 to-[#6b4c9a]/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all"></div>
        <img 
          src="/assets/screenshots/builtin_workouts.png" 
          alt="ENDURE Workout Library" 
          data-zoomable
          class="relative rounded-2xl border border-white/10 w-full cursor-zoom-in hover:shadow-lg transition-shadow"
        />
        <p class="text-center mt-4 text-[#a0a5b5] text-sm">{t.screenshot1Caption}</p>
      </div>
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-r from-[#F05D23]/20 to-[#d63c6b]/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all"></div>
        <img 
          src="/assets/screenshots/imported_workouts.png" 
          alt="ENDURE Import Workouts" 
          data-zoomable
          class="relative rounded-2xl border border-white/10 w-full cursor-zoom-in hover:shadow-lg transition-shadow"
        />
        <p class="text-center mt-4 text-[#a0a5b5] text-sm">{t.screenshot2Caption}</p>
      </div>
    </div>
  </div>
</section>
